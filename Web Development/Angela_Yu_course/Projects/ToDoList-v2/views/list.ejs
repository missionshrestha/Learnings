<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(item=>{%>

  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        onchange="this.form.submit()"
        name="checkedItem"
        value="<%= item._id%> "
        id=""
      />
      <!-- onchange is used to submit from checkbox -->
      <!-- value is used to identidy items based on their unique id to delete them -->

      <input
        type="hidden"
        onchange="this.form.submit()"
        name="listName"
        value="<%= listTitle%>"
      />
      <!-- Hidden input type can be used for sending multiple value from form without
      letting user know about it -->
      <p><%= item.name%></p>
    </div>
  </form>
  <% });%>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle%>">+</button>
  </form>
</div>

<%- include("footer") -%>
